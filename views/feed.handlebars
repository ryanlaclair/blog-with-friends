<div class="container">
  <nav class="navbar navbar-expand-sm navbar-dark bg-primary justify-content-between">
    <a class="navbar-brand" href="#">Blog With Friends</a>
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/feed">Feed</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/{{user._id}}">My Blog</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/search">Search</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Log out</a>
      </li>
    </ul>
  </nav>
  <div class="container-body text-left">
    {{#each blogs}}
    {{#if this}}
    <div class="blog-feed-post">
      <div class="row">
        <div class="col-9">
          <h4 class="h4">{{this.title}}</h4>
        </div>
        <div class="col-3 align-self-center text-right">
          {{this.author.name.first}} {{this.author.name.last}}
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <p>{{this.body}}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <a href="/{{this.author._id}}/blogs/{{this._id}}" class="btn btn-sm btn-outline-primary">View</a>
          <button class="btn btn-sm btn-outline-danger" onclick="handleRemoveFriend('{{this.author._id}}', '{{this._id}}')">Remove friend</button>
        </div>
        <div class="col-8 align-self-end text-right">
          Keywords:
          {{#each this.keywords}}
            {{this}}
          {{/each}}
        </div>
      </div>
    </div>
    {{/if}}
    {{/each}}
  </div>
</div>