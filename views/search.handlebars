<link rel='stylesheet' href='/css/search.css' />
<div class="container">
  <nav class="navbar navbar-expand-sm navbar-dark bg-primary justify-content-between">
    <a class="navbar-brand" href="#">Blog With Friends</a>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/feed">Feed</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/{{username}}">My Blog</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="#">Search</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Log out</a>
      </li>
    </ul>
  </nav>
  <div class="container container-search">
    <form class="form-search" action="/search" method="post">
      <label for="search" class="sr-only">Search</label>
      <input type="text" name="search" class="form-control" placeholder="Search" required autofocus>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Search</button>
    </form>
  </div>
  <div class="text-left">
    {{#if nameResult}}
    <h4 class="h4 mb-3 font-weight-normal">Username results:</h4>
    <table class="table table-borderless">
      <tbody>
        {{#each nameResult}}
        <tr>
          <td>{{this.username}}</td>
          <td>{{this.name.first}} {{this.name.last}}</td>
          <td>
            <a href="/feed/{{this.username}}"><button class="btn btn-sm btn-outline-primary">View blogs</button></a>
            <button class="btn btn-sm btn-outline-success" onclick="handleAddFriend('{{this.username}}')">Add friend</button>
            <button class="btn btn-sm btn-outline-danger" onclick="handleRemoveFriend('{{this.username}}')">Remove friend</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{/if}}
    {{#if keywordResult}}
    <h4 class="h4 mb-3 font-weight-normal">Keyword results:</h4>
    <table class="table table-borderless">
      <tbody>
        {{#each keywordResult}}
        <tr>
          <td>{{this.author.username}}</td>
          <td>{{this.author.name.first}}</td>
          <td>{{this.author.name.last}}</td>
          <td>{{this.title}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{/if}}
  </div>
</div>